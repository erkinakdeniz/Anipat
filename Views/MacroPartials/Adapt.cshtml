@inherits Umbraco.Web.Macros.PartialViewMacroPage
@using ContentModels = Umbraco.Web.PublishedModels;
@{ 
    var pageId = Model.MacroParameters["adapt_Page"].ToString();
    var page = Umbraco.Content(pageId);
    var adapt = page.Children().Where(x => x.IsVisible());
}
<div class="col-lg-6">
    <div class="adapt_about">
        <div class="row align-items-center">
            @foreach (ContentModels.AdaptCard item in adapt)
            {
                <div class="col-lg-6 col-md-6">
                    <div class="single_adapt text-center">
                        <img src="@item.AdaptCardImage.Url()" alt="">
                        <div class="adapt_content">
                            <h3 class="counter">@item.AdaptCardSize</h3>
                            <p>@item.AdaptCardDescription</p>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>